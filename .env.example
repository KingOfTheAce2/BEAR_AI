# BEAR AI Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Application Environment
NODE_ENV=development
TAURI_DEBUG=true

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Environment (test or live)
STRIPE_ENVIRONMENT=test

# Stripe Product and Price IDs
# Create these in your Stripe Dashboard: https://dashboard.stripe.com/products
STRIPE_BASIC_PRICE_ID=price_basic_plan_id
STRIPE_PRO_PRICE_ID=price_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# Stripe Webhook Configuration
# Configure webhook endpoint: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_URL=https://your-domain.com/stripe/webhook

# Database Configuration
DATABASE_URL=sqlite://./bear_ai.db
DATABASE_ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT Configuration for Authentication
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars
JWT_EXPIRATION=7d

# API Configuration
API_BASE_URL=http://localhost:1420
API_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bear_ai.log

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here_32_chars_min
HASH_ROUNDS=12

# Enterprise Features
ENTERPRISE_MODE=false
MAX_TEAM_MEMBERS=10
ADMIN_EMAIL=admin@yourcompany.com

# Feature Flags
ENABLE_PAYMENT_PROCESSING=true
ENABLE_SUBSCRIPTION_MANAGEMENT=true
ENABLE_ENTERPRISE_BILLING=false
ENABLE_WEBHOOK_PROCESSING=true

# Production Configuration (for production builds)
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
# STRIPE_SECRET_KEY=sk_live_your_live_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret
# STRIPE_ENVIRONMENT=live
# NODE_ENV=production
# TAURI_DEBUG=false