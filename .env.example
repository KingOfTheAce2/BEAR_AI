# =============================================================================
# BEAR AI Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# SECURITY WARNING: DO NOT commit .env files to version control!
# =============================================================================

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Environment: development | production | staging | testing
NODE_ENV=development

# Application Settings
APP_NAME=BEAR AI Legal Assistant
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:1420
API_TIMEOUT=30000
API_VERSION=v1

# Tauri Development Settings
TAURI_DEBUG=true
TAURI_DEV_WINDOW_LABEL=main

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
# Test keys start with pk_test_ and sk_test_
# Live keys start with pk_live_ and sk_live_

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Environment (test or live)
STRIPE_ENVIRONMENT=test

# Stripe Product and Price IDs
# Create these in your Stripe Dashboard: https://dashboard.stripe.com/products
STRIPE_BASIC_PRICE_ID=price_basic_plan_id
STRIPE_PRO_PRICE_ID=price_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# Stripe Webhook Configuration
# Configure webhook endpoint: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_URL=https://your-domain.com/stripe/webhook
STRIPE_WEBHOOK_ENDPOINT_SECRET=whsec_your_endpoint_secret_here

# Stripe Feature Flags
STRIPE_ENABLE_PAYMENT_PROCESSING=true
STRIPE_ENABLE_SUBSCRIPTION_MANAGEMENT=true
STRIPE_ENABLE_ENTERPRISE_BILLING=false
STRIPE_ENABLE_WEBHOOK_PROCESSING=true

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
# Use a strong, random secret key (minimum 32 characters)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_EXPIRATION=7d
JWT_ISSUER=bear-ai-legal-assistant
JWT_AUDIENCE=bear-ai-users

# Session Management
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters
SESSION_TIMEOUT=24h
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Encryption Configuration
# Use a strong 32+ character encryption key
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters_long
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_ROUNDS=12
SALT_ROUNDS=10

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Demo/Development Authentication (CHANGE IN PRODUCTION)
# These are used for development/testing only
DEMO_USER_EMAIL=demo@lawfirm.com
DEMO_USER_PASSWORD=changeme123
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Development)
DATABASE_URL=sqlite://./data/bear_ai.db
DATABASE_ENCRYPTION_KEY=your_32_character_database_encryption_key

# Database Host Configuration (for PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bear_ai_dev
DB_USER=bear_ai_user
DB_PASSWORD=changeme_in_production

# Redis Configuration (for session storage and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_in_production
REDIS_URL=redis://localhost:6379

# Vector Database Configuration (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_TYPE=qdrant

# NVIDIA Nemotron Configuration
NEMO_RETRIEVER_URL=http://localhost:8080
NEMOTRON_API_KEY=your_nemotron_api_key_here

# Payment Services Configuration
PAYMENT_REDIRECT_URL=http://localhost:3000/payment/return
PAYMENT_WEBHOOK_URL=http://localhost:3000/webhooks/mollie

# SSO Configuration
SSO_REDIRECT_URI=http://localhost:1420/auth/callback

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/bear_ai_db
# DATABASE_SSL=true
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Database Settings
DATABASE_TIMEOUT=30000
DATABASE_RETRY_ATTEMPTS=3
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Default Admin Account
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Admin Security
ADMIN_REQUIRE_2FA=true
ADMIN_SESSION_TIMEOUT=2h
ADMIN_MAX_LOGIN_ATTEMPTS=3

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================
# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_organization_id
OPENAI_MODEL=gpt-4

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet

# Google AI API
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_PROJECT_ID=your_google_project_id

# Hugging Face API
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here
HUGGINGFACE_MODEL_ENDPOINT=your_huggingface_endpoint_url

# Legal Research APIs
WESTLAW_API_KEY=your_westlaw_api_key_here
LEXISNEXIS_API_KEY=your_lexisnexis_api_key_here
FASTCASE_API_KEY=your_fastcase_api_key_here

# Document Processing APIs
DOCUMENT_AI_API_KEY=your_document_ai_api_key_here
OCR_SPACE_API_KEY=your_ocr_space_api_key_here
TESSERACT_PATH=/usr/bin/tesseract

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@yourcompany.com

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Azure Storage (Alternative)
AZURE_STORAGE_ACCOUNT=your_azure_storage_account
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_CONTAINER_NAME=bear-ai-documents

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/bear_ai.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5
LOG_ROTATE_INTERVAL=daily

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
MIXPANEL_TOKEN=your_mixpanel_token

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
# Enterprise Mode
ENTERPRISE_MODE=false
ENTERPRISE_LICENSE_KEY=your_enterprise_license_key
MAX_TEAM_MEMBERS=10
MAX_DOCUMENTS_PER_USER=1000
MAX_STORAGE_PER_USER=5GB

# =============================================================================
# SINGLE SIGN-ON (SSO) CONFIGURATION
# =============================================================================
# SSO General Settings
SSO_ENABLED=true
SSO_ENABLED_PROVIDERS=microsoft,google
SSO_SESSION_TIMEOUT=28800000
SSO_AUTO_REFRESH_TOKENS=true
SSO_REQUIRE_WORKSPACE_EMAIL=false
SSO_ALLOWED_DOMAINS=example.com,company.com
SSO_BLOCKED_DOMAINS=gmail.com,yahoo.com

# Microsoft Azure AD Configuration
# Get these from Azure Portal: https://portal.azure.com/
# Register your app in Azure Active Directory
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_AUTHORITY=https://login.microsoftonline.com/common
AZURE_CLOUD_INSTANCE=https://login.microsoftonline.com/
AZURE_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback
AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/auth/logout

# Microsoft Graph API Scopes
AZURE_SCOPES=openid,profile,email,User.Read,Directory.Read.All,Organization.Read.All

# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_HOSTED_DOMAIN=yourcompany.com

# Google API Scopes
GOOGLE_SCOPES=openid,email,profile,https://www.googleapis.com/auth/admin.directory.user.readonly

# React App Environment Variables (for frontend)
REACT_APP_AZURE_CLIENT_ID=your_azure_client_id_here
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
REACT_APP_SSO_ENABLED=true
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
REACT_APP_API_BASE_URL=http://localhost:1420

# Active Directory (Legacy SAML - Optional)
SAML_ENTITY_ID=your_saml_entity_id
SAML_SSO_URL=your_saml_sso_url
SAML_CERTIFICATE=your_saml_certificate_path
AD_DOMAIN=your_ad_domain
AD_URL=ldap://your_ad_server:389
AD_BASE_DN=dc=yourcompany,dc=com
AD_USERNAME=your_ad_service_account
AD_PASSWORD=your_ad_service_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Core Features
ENABLE_USER_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Legal Features
ENABLE_DOCUMENT_ANALYSIS=true
ENABLE_CONTRACT_REVIEW=true
ENABLE_LEGAL_RESEARCH=true
ENABLE_CASE_MANAGEMENT=false

# AI Features
ENABLE_AI_CHAT=true
ENABLE_DOCUMENT_SUMMARIZATION=true
ENABLE_LEGAL_ADVICE=false
ENABLE_PREDICTIVE_ANALYTICS=false

# Collaboration Features
ENABLE_TEAM_WORKSPACES=false
ENABLE_DOCUMENT_SHARING=true
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_COMMENT_SYSTEM=true

# Integration Features
ENABLE_CALENDAR_INTEGRATION=false
ENABLE_EMAIL_INTEGRATION=false
ENABLE_CRM_INTEGRATION=false
ENABLE_BILLING_INTEGRATION=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Settings
DEV_ENABLE_CORS=true
DEV_ENABLE_DEBUG_LOGS=true
DEV_ENABLE_HOT_RELOAD=true
DEV_DISABLE_AUTH=false

# Testing Configuration
TEST_DATABASE_URL=sqlite://./data/test_bear_ai.db
TEST_DISABLE_EMAIL=true
TEST_MOCK_PAYMENT_PROCESSING=true
TEST_SEED_DATA=true

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true

