# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Application Environment
NODE_ENV=production
TAURI_DEBUG=false

# API Configuration
API_BASE_URL=https://api.bear-ai.com
API_TIMEOUT=30000

# Stripe Production Configuration (REQUIRED)
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_KEY_HERE
STRIPE_SECRET_KEY=sk_live_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE
STRIPE_ENVIRONMENT=live
STRIPE_BASIC_PRICE_ID=price_YOUR_BASIC_PRICE
STRIPE_PRO_PRICE_ID=price_YOUR_PRO_PRICE
STRIPE_ENTERPRISE_PRICE_ID=price_YOUR_ENTERPRISE_PRICE
STRIPE_WEBHOOK_URL=https://api.bear-ai.com/webhooks/stripe

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:pass@host:5432/bear_ai_prod
DATABASE_ENCRYPTION_KEY=YOUR_32_CHAR_KEY_HERE

# Security Configuration (REQUIRED)
JWT_SECRET=YOUR_SECURE_32_CHAR_SECRET_HERE
JWT_EXPIRATION=7d
ENCRYPTION_KEY=YOUR_32_CHAR_ENCRYPTION_KEY_HERE
HASH_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/bear-ai/production.log

# Feature Flags
ENABLE_PAYMENT_PROCESSING=true
ENABLE_SUBSCRIPTION_MANAGEMENT=true
ENABLE_ENTERPRISE_BILLING=true
ENABLE_WEBHOOK_PROCESSING=true

# Enterprise Configuration
ENTERPRISE_MODE=true
MAX_TEAM_MEMBERS=100
ADMIN_EMAIL=admin@bear-ai.com

# Development/Debug (should be false in production)
WEBSOCKET_URL=wss://api.bear-ai.com/ws
OLLAMA_API_URL=https://api.bear-ai.com/ai/chat
STREAMING_ENDPOINT=wss://api.bear-ai.com/stream

# Monitoring & Analytics
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
DATADOG_API_KEY=YOUR_DATADOG_API_KEY
DATADOG_APP_KEY=YOUR_DATADOG_APP_KEY
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_KEY

# Windows Code Signing (for releases)
WINDOWS_CERTIFICATE_THUMBPRINT=YOUR_CERT_THUMBPRINT
WINDOWS_TIMESTAMP_SERVER=http://timestamp.digicert.com

# Auto-Updater Configuration
TAURI_PRIVATE_KEY=YOUR_TAURI_PRIVATE_KEY
TAURI_KEY_PASSWORD=YOUR_TAURI_KEY_PASSWORD
UPDATE_SERVER_URL=https://updates.bear-ai.com

# Compliance & Legal
GDPR_ENCRYPTION_KEY=YOUR_GDPR_KEY_HERE
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
COMPLIANCE_MODE=strict

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PER_USER=1000

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com"
HSTS_MAX_AGE=31536000
FRAME_OPTIONS=DENY

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@bear-ai.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bear-ai-backups

# Performance
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30000