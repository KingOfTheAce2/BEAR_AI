{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "legal-compliance",
  "description": "Legal compliance and security capabilities for BEAR AI Legal Assistant",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPDATA/BEAR AI/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$APPDATA/BEAR AI/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create-dir",
      "allow": [
        {
          "path": "$APPDATA/BEAR AI/**"
        }
      ]
    },
    {
      "identifier": "dialog:allow-open",
      "allow": [
        {
          "filters": [
            {
              "name": "Legal Documents",
              "extensions": ["pdf", "doc", "docx", "txt", "rtf"]
            },
            {
              "name": "All Files",
              "extensions": ["*"]
            }
          ]
        }
      ]
    },
    {
      "identifier": "dialog:allow-save",
      "allow": [
        {
          "filters": [
            {
              "name": "Legal Documents",
              "extensions": ["pdf", "doc", "docx", "txt", "rtf"]
            },
            {
              "name": "Reports",
              "extensions": ["pdf", "html", "json"]
            }
          ]
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.bear-ai.com/**"
        },
        {
          "url": "https://api.openai.com/**"
        },
        {
          "url": "https://updates.bear-ai.com/**"
        }
      ],
      "deny": [
        {
          "url": "http://**"
        }
      ]
    },
    "notification:default",
    "window:allow-show",
    "window:allow-hide",
    "window:allow-maximize",
    "window:allow-minimize",
    "window:allow-set-focus",
    "window:allow-print",
    "clipboard:allow-read-text",
    "clipboard:allow-write-text",
    "process:allow-exit"
  ],
  "platforms": ["linux", "macOS", "windows"]
}